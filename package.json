{
    "name": "cdk-set-topic-attributes",
    "version": "1.0.0",
    "description": "Use CDK to set SNS topic attributes",
    "homepage": "https://github.com/Milan9805/cdk-set-topic-attributes#readme",
    "bugs": {
        "url": "https://github.com/Milan9805/cdk-set-topic-attributes/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Milan9805/cdk-set-topic-attributes.git"
    },
    "license": "ISC",
    "author": "Milan Makwana",
    "main": "index.js",
    "scripts": {
        "pre-commit": "lint-staged && npm run test",
        "test": "cd infrastructure && npm run test && cd ../setTopicAttributes && npm run test",
        "test:coverage": "jest --coverage --coverageReporters=html && npm run open-coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit"
        }
    },
    "xo": {
        "extends": [
            "prettier",
            "prettier/@typescript-eslint"
        ],
        "overrides": [
            {
                "files": "**/*.test.{js,ts}",
                "env": "jest"
            }
        ],
        "parserOptions": {
            "project": "tsconfig.json"
        },
        "rules": {
            "@typescript-eslint/indent": "off",
            "@typescript-eslint/no-var-requires": "off",
            "@typescript-eslint/prefer-readonly-parameter-types": "off",
            "import/no-extraneous-dependencies": "off",
            "capitalized-comments": "off",
            "camelcase": "off",
            "indent": "off",
            "no-prototype-builtins": "off",
            "no-else-return": "off",
            "unicorn/filename-case": "off",
            "unicorn/import-index": "off",
            "strict": [
                "error",
                "global"
            ]
        },
        "space": true
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^26.0.5",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.0",
        "prettier": "^1.19.1",
        "sort-package-json": "^1.42.2",
        "ts-jest": "^26.1.3",
        "webpack": "^4.43.0",
        "xo": "^0.32.1"
    }
}
